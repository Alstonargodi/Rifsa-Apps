<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="customAttr">
        <attr name="ic_maps" format="reference"/>
    </declare-styleable>

    <!-- Base application theme. -->
    <style name="Theme.RifsaMobile" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="tvTitle" parent="Theme.RifsaMobile">
        <item name="android:titleTextColor">@color/black</item>
    </style>
    <style name="TvSubtitle" parent="Theme.RifsaMobile">
        <item name="android:titleTextColor">@color/gray</item>
    </style>
    <style name="TvGreen" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/green</item>
    </style>
    <style name="TvSubGreen" parent="Theme.RifsaMobile">
        <item name="android:textColor">#4CAF50</item>
    </style>
    <style name="bottomNav" parent="Theme.RifsaMobile">
        <item name="background">@color/green</item>
        <item name="itemIconTint">@color/green</item>
    </style>
    <style name="iconNav" parent="Theme.RifsaMobile">
        <item name="ic_maps">@drawable/ic_maps</item>
        <item name="android:iconTint">@color/green</item>
    </style>
</resources>