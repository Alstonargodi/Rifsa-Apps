<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.RifsaMobile" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
    </style>

    <style name="tvTitle" parent="Theme.RifsaMobile">
        <item name="android:titleTextColor">#FFFFFF</item>
    </style>
    <style name="TvSubtitle" parent="Theme.RifsaMobile">
        <item name="android:titleTextColor">#B7B7B7</item>
    </style>
    <style name="TvGreen" parent="@android:style/TextAppearance">
        <item name="android:textColor">#4CAF50</item>
    </style>
    <style name="TvSubGreen" parent="Theme.RifsaMobile">
        <item name="android:textColor">#8BC34A</item>
    </style>
    <style name="bottomNav" parent="Theme.RifsaMobile">
        <item name="android:textColor">#0015B179</item>
        <item name="itemIconTint">@color/white</item>
    </style>
    <style name="iconNav">
        <item name="ic_maps">@drawable/ic_maps</item>
    </style>
</resources>